---
const { donacion } = Astro.props;
---
<div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="font-bold">Donación #{donacion.id}</h3>
      <p class="text-sm text-gray-600">{donacion.donante_nombre}</p>
    </div>
    <span class={`badge-${donacion.estado.toLowerCase()}`}>
      {donacion.estado}
    </span>
  </div>
  
  <div class="mt-3 flex justify-between text-sm">
    <span>{new Date(donacion.fecha).toLocaleDateString()}</span>
    <span>{donacion.total_items} ítem(s)</span>
  </div>
  
  <a 
    href={`/admin/donaciones/${donacion.id}`} 
    class="block mt-3 text-blue-600 hover:underline text-sm"
  >
    Ver detalles →
  </a>
</div>
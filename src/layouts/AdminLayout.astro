---
import db from '../lib/db';


const { title = "Panel de Biblioteca ITST" } = Astro.props;
---
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/global.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="//unpkg.com/alpinejs" defer></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-['Roboto'] antialiased text-gray-800">
    <!-- Encabezado con identidad ITST -->
    <header class="bg-[#002E5D] text-white sticky top-0 z-50 shadow-md transition-all duration-300">
        <div class="container mx-auto px-6 py-3 flex justify-between items-center">
            <div class="flex items-center space-x-3 group">
                <div class="w-10 h-10 rounded-lg bg-[#FFD200] flex items-center justify-center text-[#002E5D] transition-transform duration-300 group-hover:rotate-12 animate__animated animate__pulse animate__infinite animate__slow">
                    <i class="fas fa-book-open text-lg"></i>
                </div>
                <div class="flex items-center">
                    <img src="" alt="" class="h-10 mr-2">
                    <h1 class="text-xl font-bold transition-all duration-300 group-hover:text-[#FFD200]">
                        <span class="text-[#FFD200]">Biblioteca</span> ITST
                    </h1>
                </div>
            </div>
            
            <div class="flex items-center space-x-4">
                <button class="p-2 rounded-full bg-[#0077C8] text-white hover:bg-[#0066B3] transition-all duration-300 relative hover:-translate-y-0.5">
                    <i class="fas fa-bell animate__animated animate__swing animate__infinite animate__slower"></i>
                    <span class="absolute top-0 right-0 w-2 h-2 bg-[#FFD200] rounded-full animate-ping"></span>
                </button>
                
                <div class="flex items-center space-x-2 group">
                    <div class="w-8 h-8 rounded-full bg-[#0077C8] flex items-center justify-center text-white text-sm font-medium transition-all duration-300 group-hover:bg-[#0066B3] group-hover:scale-110">
                        <i class="fas fa-user-tie animate__animated animate__pulse animate__infinite animate__slow"></i>
                    </div>
                    <span class="hidden md:inline font-medium text-white transition-all duration-300 group-hover:text-[#FFD200]">Bibliotecario</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenedor principal -->
    <div class="container mx-auto flex flex-col md:flex-row px-4 py-6 gap-6 animate-fade-in">
        <!-- Menú lateral -->
        <aside class="md:w-64 flex-shrink-0 transition-all duration-500 hover:-translate-y-1">
            <nav class="bg-white rounded-lg shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md border border-gray-200">
                <div class="p-4 bg-[#002E5D] relative overflow-hidden">
                    <div class="absolute -right-10 -top-10 w-24 h-24 rounded-full bg-[#FFD200]/20 transition-all duration-700 hover:scale-150"></div>
                    <h2 class="text-white font-semibold relative z-10">¡Hola Administrador!</h2>
                    <p class="text-white/90 text-sm relative z-10">Sistema de Gestión Bibliotecaria</p>
                </div>
                
                <div class="p-2 space-y-1">
                    <a href="/home" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-home fa-sm animate__animated animate__rubberBand animate__infinite animate__slower"></i>
                        </div>
                        <span class="text-sm font-medium">Inicio</span>
                    </a>
                    
                    <a href="/asistencia" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-user-check fa-sm"></i>
                        </div>
                        <span class="text-sm font-medium">Control de Asistencia</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#FFD200] text-[#002E5D] font-medium animate-bounce">12</span>
                    </a>

                    <a href="/consultas" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-search fa-sm animate__animated animate__heartBeat animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Consultas</span>
                    </a>

                    <a href="/donaciones" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-gift fa-sm animate__animated animate__tada animate__infinite animate__slower"></i>
                        </div>
                        <span class="text-sm font-medium">Donaciones</span>
                    </a>

                    <a href="/credenciales" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-id-card fa-sm animate__animated animate__flip animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Credenciales</span>
                    </a>

                    <a href="/multa" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-exclamation-circle fa-sm animate__animated animate__shakeX animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Multas</span>
                    </a>

                    <a href="/libros" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-book fa-sm animate__animated animate__wobble animate__infinite animate__slower"></i>
                        </div>
                        <span class="text-sm font-medium">Libros</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#FFD200] text-[#002E5D] font-medium animate-bounce">12</span>
                    </a>
                    
                    <a href="/usuarios/" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-users fa-sm animate__animated animate__jello animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Usuarios</span>
                    </a>
                    
                    <a href="/libros/prestamos" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-exchange-alt fa-sm animate__animated animate__flash animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Préstamos</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#0077C8] text-white font-medium animate-pulse">5</span>
                    </a>

                     
                    <a href="/buscar-libro" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-tags fa-sm animate__animated animate__bounceIn animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Generar Etiqueta</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#0077C8] text-white font-medium animate-pulse">5</span>
                    </a>

                     <a href="/inventario" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-clipboard-list fa-sm animate__animated animate__lightSpeedInRight animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Inventario Libros</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#0077C8] text-white font-medium animate-pulse">5</span>
                    </a>

                       <a href="scan" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-exchange-alt fa-sm animate__animated animate__flash animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Scan Libros</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-[#0077C8] text-white font-medium animate-pulse">5</span>
                    </a>

                    


                    <a href="/perfil" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-[#002E5D]/10 hover:text-[#002E5D] transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-[#002E5D]/10 text-[#002E5D] transition-all duration-300 group-hover:rotate-6">
                            <i class="fas fa-user-cog fa-sm animate__animated animate__rotateIn animate__infinite animate__slow"></i>
                        </div>
                        <span class="text-sm font-medium">Perfil</span>
                    </a>
                </div>
                
                <div class="p-3 border-t border-gray-100">
                    <a href="/api/cerrar" class="flex items-center px-2 py-1.5 rounded-lg text-gray-500 hover:bg-gray-100 transition-all duration-300 group">
                        <i class="fas fa-sign-out-alt fa-sm mr-2 transition-all duration-300 group-hover:rotate-180 text-[#002E5D] animate__animated animate__flip animate__infinite animate__slow"></i>
                        <span class="text-sm font-medium">Cerrar sesión</span>
                    </a>
                </div>
            </nav>
            
            <div class="mt-4 bg-white rounded-lg shadow-sm p-4 hidden md:block transition-all duration-500 hover:shadow-md hover:-translate-y-1 border border-gray-200">
                <div class="flex items-center space-x-3 group">
                    <div class="p-1.5 rounded-md bg-[#FFD200] text-[#002E5D] transition-all duration-300 group-hover:scale-110">
                        <i class="fas fa-info-circle animate__animated animate__pulse animate__infinite"></i>
                    </div>
                    <div class="transition-all duration-300 group-hover:translate-x-1">
                        <h3 class="font-medium text-gray-800">¡Nuevo libro!</h3>
                        <p class="text-xs text-gray-500">Agrega nuevos títulos al acervo</p>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Contenido principal -->
        <main class="flex-1 transition-all duration-500 hover:-translate-y-1">
            <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md border border-gray-200">
                <!-- Header del contenido -->
                <div class="p-6 border-b border-gray-100 bg-gradient-to-r from-white to-[#002E5D]/5">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                        <div class="transition-all duration-500 hover:translate-x-1">
                            <h2 class="text-2xl font-semibold text-[#002E5D] flex items-center">
                                {title}
                                <i class="fas fa-sparkles text-[#FFD200] ml-2 animate__animated animate__tada animate__infinite animate__slower"></i>
                            </h2>
                            <p class="text-gray-500 text-sm mt-1 flex items-center">
                                <i class="fas fa-map-marker-alt text-[#0077C8] mr-1"></i>
                                Instituto Tecnológico Superior de Tlaxco
                            </p>
                        </div>
                        <div class="mt-4 md:mt-0 flex items-center space-x-3">
                            <div class="text-xs bg-[#002E5D]/10 text-[#002E5D] px-2.5 py-1 rounded-full font-medium transition-all duration-300 hover:bg-[#002E5D]/20 flex items-center">
                                <i class="fas fa-calendar-day mr-1 animate__animated animate__pulse animate__infinite animate__slower"></i>
                                Hoy: {new Date().toLocaleDateString('es-ES', { weekday: 'long', day: 'numeric', month: 'long' })}
                            </div>
                            <button class="p-1.5 rounded-full bg-[#002E5D]/10 text-[#002E5D] hover:bg-[#002E5D]/20 transition-all duration-300 hover:rotate-90">
                                <i class="fas fa-cog animate-spin-slow"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Contenido -->
                <div class="p-6 bg-white">
                    <slot />
                </div>
            </div>
            
            <!-- Tarjeta de bienvenida -->
            <div class="mt-6 bg-gradient-to-r from-[#002E5D] to-[#0077C8] rounded-lg overflow-hidden transition-all duration-500 hover:scale-[1.01]">
                <div class="p-6 text-white relative overflow-hidden">
                    <div class="absolute -right-20 -top-20 w-64 h-64 rounded-full bg-[#FFD200]/10 transition-all duration-700 hover:scale-150"></div>
                    <div class="absolute -right-10 -top-10 w-32 h-32 rounded-full bg-[#FFD200]/20 transition-all duration-700 hover:scale-150"></div>
                    <div class="flex items-start space-x-4 relative">
                        <div class="p-2 bg-white/20 rounded-md backdrop-blur-sm border border-white/10 transition-all duration-300 hover:rotate-12">
                            <i class="fas fa-star text-[#FFD200] animate__animated animate__heartBeat animate__infinite animate__slow"></i>
                        </div>
                        <div class="transition-all duration-500 hover:translate-x-1">
                            <h3 class="font-semibold text-lg flex items-center">
                                ¡Bienvenido al Sistema de Biblioteca!
                                <i class="fas fa-hand-wave ml-2 animate__animated animate__wobble animate__infinite animate__slower"></i>
                            </h3>
                            <p class="mt-1 text-white/90 text-sm flex items-center">
                                <i class="fas fa-graduation-cap mr-1"></i>
                                ITST Tlaxco - Formando profesionales de excelencia
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap');
        
        body {
            font-feature-settings: 'liga', 'kern';
        }
        
        /* Animaciones personalizadas */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .animate-fade-in {
            animation: fadeIn 0.6s ease-out forwards;
        }
        
        /* Transiciones suaves para elementos interactivos */
        a, button {
            transition-property: color, background-color, transform, box-shadow;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        /* Efecto de elevación sutil */
        .hover-float {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-float:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        /* Animación de giro lento */
        .animate-spin-slow {
            animation: spin 8s linear infinite;
        }
        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
    
    <script>
        // Animaciones con GSAP para elementos específicos
        document.addEventListener('DOMContentLoaded', () => {
            // Animación de entrada para el logo
            gsap.from('header div:first-child', {
                duration: 0.8,
                x: -20,
                opacity: 0,
                ease: "back.out(1.2)"
            });
            
            // Animación de entrada para los elementos de navegación
            gsap.from('nav a', {
                duration: 0.6,
                y: 20,
                opacity: 0,
                stagger: 0.1,
                delay: 0.3,
                ease: "power2.out"
            });
            
            // Efecto hover más elaborado para botones
            document.querySelectorAll('button, a[href]').forEach(btn => {
                btn.addEventListener('mouseenter', () => {
                    gsap.to(btn, {
                        duration: 0.3,
                        scale: 1.05,
                        ease: "power2.out"
                    });
                });
                
                btn.addEventListener('mouseleave', () => {
                    gsap.to(btn, {
                        duration: 0.3,
                        scale: 1,
                        ease: "power2.out"
                    });
                });
            });
        });
    </script>
</body>
</html>
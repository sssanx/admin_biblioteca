---
const { title = "Panel de Biblioteca" } = Astro.props;
---
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/global.css" />
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
      <script src="//unpkg.com/alpinejs" defer></script>

</head>
<body class="min-h-screen bg-gray-50 font-['Inter'] antialiased text-gray-800">
    <!-- Encabezado sofisticado con animación sutil -->
    <header class="bg-white border-b border-gray-100 sticky top-0 z-50 shadow-sm transition-all duration-300 hover:shadow-md">
        <div class="container mx-auto px-6 py-3 flex justify-between items-center">
            <div class="flex items-center space-x-3 group">
                <div class="w-10 h-10 rounded-lg bg-indigo-600 flex items-center justify-center text-white transition-transform duration-300 group-hover:rotate-12">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <h1 class="text-2xl font-semibold text-gray-800 transition-all duration-300 group-hover:text-indigo-600">
                    <span class="text-indigo-600">Biblio</span>Tec
                </h1>
            </div>
            
            <div class="flex items-center space-x-4">
                <button class="p-2 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-all duration-300 relative hover:-translate-y-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                    <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                </button>
                
                <div class="flex items-center space-x-2 group">
                    <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-white text-sm font-medium transition-all duration-300 group-hover:bg-indigo-700 group-hover:scale-110">A</div>
                    <span class="hidden md:inline font-medium text-gray-700 transition-all duration-300 group-hover:text-indigo-600">Bibliotecario</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenedor principal con animación de entrada -->
    <div class="container mx-auto flex flex-col md:flex-row px-4 py-6 gap-6 animate-fade-in">
        <!-- Menú lateral elegante con animaciones -->
        <aside class="md:w-64 flex-shrink-0 transition-all duration-500 hover:-translate-y-1">
            <nav class="bg-white rounded-lg shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
                <div class="p-4 bg-indigo-600 relative overflow-hidden">
                    <div class="absolute -right-10 -top-10 w-24 h-24 rounded-full bg-white/10 transition-all duration-700 hover:scale-150"></div>
                    <h2 class="text-white font-semibold relative z-10">¡Hola Admin!</h2>
                    <p class="text-white/90 text-sm relative z-10">Gestiona tu biblioteca</p>
                </div>
                
                <div class="p-2 space-y-1">
                    <a href="/home" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                        </div>
                        <span class="text-sm font-medium">Inicio</span>
                    </a>
                    
                     <a href="/estadisticas" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                        <span class="text-sm font-medium">Estadisticas</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-indigo-100 text-indigo-600 font-medium animate-bounce">12</span>
                    </a>

                     <a href="/consultas" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
  <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A4 4 0 015 16V8a4 4 0 014-4h6a4 4 0 014 4v8a4 4 0 01-.121 1.804M15 21H9a2 2 0 01-2-2v-1h10v1a2 2 0 01-2 2z" />
    </svg>
  </div>
  <span class="text-sm font-medium">Consultas</span>
</a>


                    <a href="/libros" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                        <span class="text-sm font-medium">Libros</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-indigo-100 text-indigo-600 font-medium animate-bounce">12</span>
                    </a>
                    
                      
                    
                    <a href="/usuarios/" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                        </div>
                        <span class="text-sm font-medium">Usuarios</span>
                    </a>
                    
                    <a href="/libros/prestamos" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
                        <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                            </svg>
                        </div>
                        <span class="text-sm font-medium">Préstamos</span>
                        <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-600 font-medium animate-pulse">5</span>
                    </a>
                </div>


                <a href="/perfil" class="group flex items-center px-3 py-2.5 rounded-lg text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 transition-all duration-300 hover:translate-x-1">
  <div class="mr-3 p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:rotate-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A4 4 0 015 16V8a4 4 0 014-4h6a4 4 0 014 4v8a4 4 0 01-.121 1.804M15 21H9a2 2 0 01-2-2v-1h10v1a2 2 0 01-2 2z" />
    </svg>
  </div>
  <span class="text-sm font-medium">Perfil</span>
</a>


                
                <div class="p-3 border-t border-gray-100">
                    <a href="/api/cerrar" class="flex items-center px-2 py-1.5 rounded-lg text-gray-500 hover:bg-gray-100 transition-all duration-300 group">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 transition-all duration-300 group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                        <span class="text-sm font-medium">Cerrar sesión</span>
                    </a>
                </div>
            </nav>
            
            <div class="mt-4 bg-white rounded-lg shadow-sm p-4 hidden md:block transition-all duration-500 hover:shadow-md hover:-translate-y-1">
                <div class="flex items-center space-x-3 group">
                    <div class="p-1.5 rounded-md bg-indigo-100 text-indigo-600 transition-all duration-300 group-hover:scale-110">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="transition-all duration-300 group-hover:translate-x-1">
                        <h3 class="font-medium text-gray-800">¡Nuevo libro!</h3>
                        <p class="text-xs text-gray-500">Agrega nuevos títulos</p>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Contenido principal con animaciones fluidas -->
        <main class="flex-1 transition-all duration-500 hover:-translate-y-1">
            <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
                <!-- Header del contenido con gradiente sutil -->
                <div class="p-6 border-b border-gray-100 bg-gradient-to-r from-white to-indigo-50">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                        <div class="transition-all duration-500 hover:translate-x-1">
                            <h2 class="text-2xl font-semibold text-gray-800">{title}</h2>
                            <p class="text-gray-500 text-sm mt-1">Gestiona el contenido de tu biblioteca</p>
                        </div>
                        <div class="mt-4 md:mt-0 flex items-center space-x-3">
                            <div class="text-xs bg-gray-100 text-gray-600 px-2.5 py-1 rounded-full font-medium transition-all duration-300 hover:bg-indigo-100 hover:text-indigo-600">
                                Hoy: {new Date().toLocaleDateString('es-ES', { weekday: 'long', day: 'numeric', month: 'long' })}
                            </div>
                            <button class="p-1.5 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-all duration-300 hover:rotate-90">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Contenido -->
                <div class="p-6 bg-white">
                    <slot />
                </div>
            </div>
            
            <!-- Tarjeta de bienvenida con animación -->
            <div class="mt-6 bg-gradient-to-r from-indigo-600 to-indigo-500 rounded-lg overflow-hidden transition-all duration-500 hover:scale-[1.01]">
                <div class="p-6 text-white relative overflow-hidden">
                    <div class="absolute -right-20 -top-20 w-64 h-64 rounded-full bg-white/10 transition-all duration-700 hover:scale-150"></div>
                    <div class="absolute -right-10 -top-10 w-32 h-32 rounded-full bg-white/20 transition-all duration-700 hover:scale-150"></div>
                    <div class="flex items-start space-x-4 relative">
                        <div class="p-2 bg-white/20 rounded-md backdrop-blur-sm border border-white/10 transition-all duration-300 hover:rotate-12">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                            </svg>
                        </div>
                        <div class="transition-all duration-500 hover:translate-x-1">
                            <h3 class="font-semibold text-lg">¡Bienvenido!</h3>
                            <p class="mt-1 text-white/90 text-sm">Sistema de gestión bibliotecaria</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body {
            font-feature-settings: 'liga', 'kern';
        }
        
        /* Animaciones personalizadas */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .animate-fade-in {
            animation: fadeIn 0.6s ease-out forwards;
        }
        
        /* Transiciones suaves para elementos interactivos */
        a, button {
            transition-property: color, background-color, transform, box-shadow;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        /* Efecto de elevación sutil */
        .hover-float {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-float:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
    </style>
    
    <script>
        // Animaciones con GSAP para elementos específicos
        document.addEventListener('DOMContentLoaded', () => {
            // Animación de entrada para el logo
            gsap.from('header div:first-child', {
                duration: 0.8,
                x: -20,
                opacity: 0,
                ease: "back.out(1.2)"
            });
            
            // Animación de entrada para los elementos de navegación
            gsap.from('nav a', {
                duration: 0.6,
                y: 20,
                opacity: 0,
                stagger: 0.1,
                delay: 0.3,
                ease: "power2.out"
            });
            
            // Efecto hover más elaborado para botones
            document.querySelectorAll('button, a[href]').forEach(btn => {
                btn.addEventListener('mouseenter', () => {
                    gsap.to(btn, {
                        duration: 0.3,
                        scale: 1.05,
                        ease: "power2.out"
                    });
                });
                
                btn.addEventListener('mouseleave', () => {
                    gsap.to(btn, {
                        duration: 0.3,
                        scale: 1,
                        ease: "power2.out"
                    });
                });
            });
        });
    </script>
</body>
</html>
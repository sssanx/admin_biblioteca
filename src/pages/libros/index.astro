---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import db from '../../lib/db.js';

const result = await db.query('SELECT * FROM libros ORDER BY id DESC');
const libros = result.rows;
const catResult = await db.query('SELECT * FROM categorias ORDER BY nombre ASC');
const categorias = catResult.rows;
---

<AdminLayout title="Catálogo de Libros">
  <main class="min-h-screen bg-gray-50 relative overflow-x-hidden font-['Inter']">
    <!-- Contenido principal ampliado -->
    <div class="w-full max-w-none px-4 sm:px-6 lg:px-8 py-10 mx-4">
      <!-- Tarjeta contenedora con efecto sutil -->
      <div class="bg-white rounded-xl shadow-md p-6 sm:p-8 space-y-8 border border-gray-100 transition-all duration-500 hover:shadow-lg">
        
        <!-- Fila superior: Botón y buscador -->
        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 sm:gap-6">
          <!-- Botón para agregar nuevo libro -->
          <button
            onclick="document.getElementById('modal-libro').classList.remove('hidden')"
            class="btn-primary group relative overflow-hidden transition-transform duration-300 hover:-translate-y-1"
          >
            <span class="relative z-10 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <span>Agregar Libro</span>
            </span>
          </button>

          <!-- Buscador elegante -->
          <div class="relative w-full lg:w-96">
            <input
              type="text"
              placeholder="Buscar libro..."
              class="search-input relative w-full px-5 py-3 rounded-lg bg-white border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-300 text-gray-700 placeholder-gray-400"
            />
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute right-3 top-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>

        <!-- Título de sección con borde decorativo -->
        <div class="text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-3">Catálogo de Libros</h2>
          <div class="w-24 h-1 bg-indigo-600 mx-auto rounded-full mb-6"></div>
        </div>

        <!-- Tabla de Libros - Versión ampliada -->
        {libros.length > 0 ? (
          <div class="overflow-x-auto rounded-lg shadow-sm border border-gray-200 w-full max-w-[98vw] mx-auto">
            <table class="w-full text-sm border-separate border-spacing-0" style="table-layout: auto">
              <thead class="table-header">
                <tr>
                  <th class="px-6 py-4 text-left font-semibold text-white rounded-tl-lg min-w-[80px]">ID</th>
                  <th class="px-6 py-4 text-left font-semibold text-white min-w-[300px]">Título</th>
                  <th class="px-6 py-4 text-left font-semibold text-white min-w-[200px]">Autor</th>
                  <th class="px-6 py-4 text-left font-semibold text-white min-w-[100px]">Año</th>
                  <th class="px-6 py-4 text-left font-semibold text-white min-w-[150px]">Categoría</th>
                  <th class="px-6 py-4 text-left font-semibold text-white min-w-[150px]">ISBN</th>
                  <th class="px-6 py-4 text-center font-semibold text-white rounded-tr-lg min-w-[250px]">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {libros.map((libro) => (
                  <tr class="table-row group">
                    <td class="px-6 py-4 font-medium text-indigo-600">{libro.id}</td>
                    <td class="px-6 py-4 text-gray-800 font-medium">{libro.titulo}</td>
                    <td class="px-6 py-4 text-gray-600">{libro.autor}</td>
                    <td class="px-6 py-4 text-gray-600">{libro.anio}</td>
                    <td class="px-6 py-4">
                      <span class="category-badge">
                        {categorias.find(c => c.id === libro.categoria_id)?.nombre || 'Sin categoría'}
                      </span>
                    </td>
                    <td class="px-6 py-4 font-mono text-gray-600">{libro.isbn}</td>
                    <td class="px-6 py-4 text-center space-x-2">
                      <a
                        href={`/libros/${libro.id}`}
                        class="btn-action btn-view"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver
                      </a>
                      <a
                        href={`/libros/editar_l?id=${libro.id}`}
                        class="btn-action btn-edit"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Editar
                      </a>
                      <button 
                        onclick={`if(confirm('¿Eliminar este libro?')) { fetch('/api/eliminar_lib/${libro.id}').then(() => window.location.reload()) }`}
                        class="btn-action btn-delete"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Eliminar
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="no-books-container">
            <div class="text-gray-300 mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3">No hay libros registrados</h3>
            <p class="text-gray-600 max-w-md mx-auto">¡Comienza agregando el primer libro al catálogo!</p>
          </div>
        )}
      </div>
    </div>

    <!-- Modal para agregar nuevo libro (sin cambios) -->
    <div
      id="modal-libro"
      class="fixed inset-0 z-50 hidden flex items-center justify-center p-4"
    >
      <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="document.getElementById('modal-libro').classList.add('hidden')"></div>
      
      <div class="relative bg-white rounded-xl shadow-xl w-full max-w-2xl mx-4 overflow-hidden transition-all duration-300 transform hover:scale-[1.005]">
        <!-- Botón cerrar -->
        <button
          class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-light w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-100 transition-colors"
          onclick="document.getElementById('modal-libro').classList.add('hidden')"
          title="Cerrar"
        >
          ×
        </button>

        <!-- Encabezado -->
        <div class="p-8 pb-0 text-center">
          <div class="text-indigo-500 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-800 mb-3">Nuevo Libro</h2>
          <div class="w-20 h-1 bg-indigo-600 mx-auto rounded-full mb-3"></div>
          <p class="text-gray-600">Registro en el Catálogo Bibliotecario</p>
        </div>

        <!-- Formulario -->
        <form method="POST" action="/api/agregar_lib" class="p-8 pt-6 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Título del Libro</label>
              <input name="titulo" required placeholder="Ingresa el título completo"
                class="input-field" />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Autor</label>
              <input name="autor" required placeholder="Nombre del autor"
                class="input-field" />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Año de Publicación</label>
              <input name="anio" type="number" required placeholder="Año"
                class="input-field" />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">ISBN</label>
              <input name="isbn" required placeholder="Número ISBN"
                class="input-field" />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Categoría</label>
              <select name="categoria_id" required class="select-field">
                <option value="" disabled selected>Selecciona una categoría</option>
                {categorias.map((cat) => (
                  <option value={cat.id}>{cat.nombre}</option>
                ))}
              </select>
            </div>
          </div>

          <div class="pt-4">
            <button type="submit"
              class="btn-primary w-full group transition-transform duration-300 hover:-translate-y-1">
              <span class="relative z-10 flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span>Registrar Libro</span>
              </span>
            </button>
          </div>
        </form>
      </div>
    </div>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
      
      /* Componentes */
      .btn-primary {
        @apply inline-flex items-center gap-2 text-white px-6 py-3 rounded-lg font-medium transition-all duration-300;
        background-color: #4f46e5;
      }
      
      .btn-primary:hover {
        background-color: #4338ca;
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
      }
      
      .btn-action {
        @apply inline-flex items-center gap-1.5 text-xs font-medium px-3 py-1.5 rounded-md transition-all duration-200;
      }
      
      .btn-view {
        @apply bg-emerald-100 text-emerald-700 hover:bg-emerald-200;
      }
      
      .btn-edit {
        @apply bg-indigo-100 text-indigo-700 hover:bg-indigo-200;
      }
      
      .btn-delete {
        @apply bg-red-100 text-red-700 hover:bg-red-200;
      }
      
      .btn-action:hover {
        transform: translateY(-1px);
      }
      
      .search-input {
        @apply transition-all duration-300;
      }
      
      .search-input:focus {
        @apply ring-2 ring-indigo-200 border-indigo-500;
      }
      
      .table-header {
        @apply bg-indigo-600 text-white;
      }
      
      .table-row {
        @apply bg-white hover:bg-gray-50 transition-colors duration-200;
      }
      
      .table-row:nth-child(even) {
        @apply bg-gray-50;
      }
      
      .table-row:hover {
        @apply bg-gray-100;
      }
      
      .input-field {
        @apply w-full px-4 py-2.5 rounded-lg focus:outline-none transition-all duration-300 bg-white border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100;
      }
      
      .select-field {
        @apply w-full px-4 py-2.5 rounded-lg focus:outline-none transition-all duration-300 bg-white border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100;
      }
      
      .category-badge {
        @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800;
      }
      
      .no-books-container {
        @apply text-center py-16 rounded-lg bg-gray-50 border-2 border-dashed border-gray-200;
      }

      /* Nuevos estilos para la tabla ampliada */
      table {
        width: 100%;
        table-layout: auto;
      }
      
      th, td {
        padding: 12px 16px;
        white-space: nowrap;
      }
    </style>

    <script>
      // Animaciones con GSAP para una experiencia más dinámica
      document.addEventListener('DOMContentLoaded', () => {
        // Animación de entrada para la tarjeta principal
        gsap.from('.bg-white', {
          duration: 0.8,
          y: 20,
          opacity: 0,
          ease: "power2.out"
        });
        
        // Animación para los elementos de la tabla
        if (document.querySelector('.table-row')) {
          gsap.from('.table-row', {
            duration: 0.6,
            y: 10,
            opacity: 0,
            stagger: 0.05,
            delay: 0.3,
            ease: "power2.out"
          });
        }
        
        // Efecto hover más elaborado para botones
        document.querySelectorAll('button, a[href]').forEach(btn => {
          btn.addEventListener('mouseenter', () => {
            gsap.to(btn, {
              duration: 0.2,
              scale: 1.02,
              ease: "power2.out"
            });
          });
          
          btn.addEventListener('mouseleave', () => {
            gsap.to(btn, {
              duration: 0.2,
              scale: 1,
              ease: "power2.out"
            });
          });
        });
      });
    </script>
  </main>
</AdminLayout>
---
import db from "../../lib/db.js";
import AdminLayout from "../../layouts/AdminLayout.astro";

// Cargar solo multas pendientes
const result = await db.query(`
  SELECT m.id, u.nombre AS usuario, l.titulo AS libro, 
         m.monto, m.dias_retraso, 
         m.fecha_multa, m.fecha_pago, 
         m.estado, m.observaciones
  FROM multas m
  JOIN usuarios u ON m.usuario_id = u.id
  JOIN libros l ON m.libro_id = l.id
  WHERE m.estado = 'pendiente'
  ORDER BY m.fecha_multa DESC
`);

const multas = result.rows;
---

<AdminLayout title="Gestión de Multas Pendientes">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Multas Pendientes</h1>

    {multas.length > 0 ? (
      <div class="bg-white rounded-xl shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Usuario</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Libro</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto (€)</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Días Retraso</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha Multa</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {multas.map(m => {
              const monto = Number(m.monto);
              const fechaMulta = new Date(m.fecha_multa).toLocaleDateString('es-ES');

              return (
                <tr key={m.id}>
                  <td class="px-6 py-4 text-sm text-gray-900">{m.usuario}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">{m.libro}</td>
                  <td class="px-6 py-4 text-sm text-gray-700">{monto.toFixed(2)}</td>
                  <td class="px-6 py-4 text-sm text-gray-700">{m.dias_retraso}</td>
                  <td class="px-6 py-4 text-sm text-gray-700">{fechaMulta}</td>
                  <td class="px-6 py-4 text-sm">
                    <span class="badge-warning">Pendiente</span>
                  </td>
                  <td class="px-6 py-4 text-sm">
                    <form action="/api/pagar-multa" method="POST">
                      <input type="hidden" name="id_multa" value={m.id} />
                      <button type="submit" class="btn-primary-sm">Marcar como pagada</button>
                    </form>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    ) : (
      <p class="text-gray-600">No hay multas pendientes.</p>
    )}
  </div>

  <style is:global>
    .badge-warning {
      @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800;
    }
    .btn-primary-sm {
      @apply bg-blue-500 hover:bg-blue-600 text-white font-medium py-1 px-3 rounded text-xs;
    }
  </style>
</AdminLayout>

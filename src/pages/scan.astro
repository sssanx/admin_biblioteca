<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Escanear ISBN</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .loader {
      border: 3px solid #f3f3f3;
      border-top: 3px solid #3498db;
      border-radius: 50%;
      width: 24px;
      height: 24px;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
    <div class="p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">üîç Escanear ISBN</h1>
      
      <form id="isbn-form" class="space-y-4">
        <input
          type="text"
          id="isbn-input"
          placeholder="Ingrese o escanee el ISBN"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          autofocus
        >
        <button
          type="submit"
          id="search-btn"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg"
        >
          Buscar Libro
        </button>
      </form>

      <!-- Contenedor de Resultados - Siempre visible pero inicialmente vac√≠o -->
      <div id="result-container" class="mt-6">
        <!-- El contenido se insertar√° din√°micamente aqu√≠ -->
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('isbn-form');
      const isbnInput = document.getElementById('isbn-input');
      const resultContainer = document.getElementById('result-container');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const isbn = isbnInput.value.trim();

        if (!isbn) return;

        // Limpiar resultados anteriores
        resultContainer.innerHTML = `
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 animate-pulse">
            <div class="flex gap-4">
              <div class="w-32 h-40 bg-gray-200 rounded flex items-center justify-center">
                <span class="text-gray-500">Cargando...</span>
              </div>
              <div class="flex-1 space-y-3">
                <div class="h-6 bg-gray-200 rounded w-3/4"></div>
                <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                <div class="h-4 bg-gray-200 rounded w-2/3"></div>
              </div>
            </div>
          </div>
        `;

        try {
          const response = await fetch(`/api/consultar_isbn?isbn=${isbn}`);
          const data = await response.json();

          if (!response.ok || data.error) {
            throw new Error(data.error || 'Libro no encontrado');
          }

          // Plantilla de resultados CON BOTONES
          resultContainer.innerHTML = `
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <div class="flex gap-4">
                <div class="w-32 h-40 bg-gray-200 rounded flex items-center justify-center">
                  ${data.portada ? 
                    `<img src="${data.portada}" alt="Portada" class="w-full h-full object-cover rounded">` : 
                    '<span class="text-gray-500">Sin portada</span>'}
                </div>
                <div class="flex-1">
                  <h2 class="text-lg font-bold text-gray-800">${data.titulo || 'Sin t√≠tulo'}</h2>
                  <div class="mt-2 space-y-1">
                    <p><span class="font-semibold">Autor:</span> ${data.autores?.join(', ') || 'Desconocido'}</p>
                    <p><span class="font-semibold">Editorial:</span> ${data.editorial || 'Desconocida'}</p>
                    <p><span class="font-semibold">A√±o:</span> ${data.anio || 'Desconocido'}</p>
                    <p><span class="font-semibold">ISBN:</span> ${data.isbn}</p>
                  </div>
                </div>
              </div>
              
              <!-- SECCI√ìN DE BOTONES FIJA -->
              <div class="mt-4 pt-4 border-t border-gray-200">
                <label class="block text-sm font-medium text-gray-700 mb-2">Categor√≠a</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md">
                  <option value="1">General</option>
                  <option value="2">Ficci√≥n</option>
                  <option value="3">T√©cnico</option>
                </select>
                
                <div class="mt-4 flex justify-end space-x-3">
                  <button id="cancel-btn" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancelar
                  </button>
                  <button id="save-btn" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md">
                    Guardar Libro
                  </button>
                </div>
              </div>
            </div>
          `;

          // Configurar eventos de los botones
          document.getElementById('save-btn').addEventListener('click', async () => {
            try {
              const response = await fetch('/api/agregar_lib', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  titulo: data.titulo,
                  autor: data.autores?.join(', '),
                  editorial: data.editorial,
                  anio: data.anio,
                  isbn: data.isbn,
                  categoria_id: 1
                })
              });
              
              if (response.ok) {
                alert('Libro guardado correctamente');
                isbnInput.value = '';
                resultContainer.innerHTML = '';
                isbnInput.focus();
              }
            } catch (error) {
              console.error('Error:', error);
            }
          });

          document.getElementById('cancel-btn').addEventListener('click', () => {
            resultContainer.innerHTML = '';
            isbnInput.focus();
          });

        } catch (error) {
          resultContainer.innerHTML = `
            <div class="bg-red-50 border-l-4 border-red-500 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Error en la b√∫squeda</h3>
                  <div class="mt-2 text-sm text-red-700">
                    <p>${error.message}</p>
                  </div>
                </div>
              </div>
            </div>
          `;
        }
      });
    });
  </script>
</body>
</html>
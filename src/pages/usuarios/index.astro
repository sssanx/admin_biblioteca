import AdminLayout from '../../layouts/AdminLayout.astro';

const response = await fetch('http://localhost:4321/api/usuarios');

let usuarios = [];
try {
  const data = await response.json();
  console.log("Respuesta de la API usuarios:", data);

  if (Array.isArray(data)) {
    usuarios = data;
  } else if (data.rows && Array.isArray(data.rows)) {
    usuarios = data.rows;
  } else {
    console.error("Formato inesperado de respuesta:", data);
    throw new Error("La API no devolvi√≥ un arreglo de usuarios");
  }
  console.log("Usuarios cargados:", usuarios);
} catch (err) {
  console.error("Error al cargar usuarios:", err);
}

const carreras = [
  { id: 1, nombre: "Ingenier√≠a en materiales" },
  { id: 2, nombre: "Ingenier√≠a Qu√≠mica" },
  { id: 3, nombre: "Ingenier√≠a en log√≠stica" },
  { id: 4, nombre: "Ingenier√≠a en electromec√°nica" },
  { id: 5, nombre: "Ingenier√≠a empresarial" }
];

// ‚úÖ Correcci√≥n clave: usar id_cuatrimestre correctamente
const usuariosMapeados = usuarios.map(u => ({
  ...u,
  cuatrimestre: u.cuatrimestre || (u.id_cuatrimestre ? `${u.id_cuatrimestre}¬∞ Semestre` : 'No asignado'),
  cuatrimestres: u.id_cuatrimestre // üîÅ Esto se usa para data-cuatrimestre
}));
console.log("Usuarios mapeados con cuatrimestre:", usuariosMapeados);

const cuatrimestresLista = Array.from({ length: 10 }, (_, i) => ({
  id: i + 1,
  nombre: `${i + 1}¬∞ Semestre`
}));

---
import AdminLayout from '../../layouts/AdminLayout.astro';
const response = await fetch('http://localhost:4321/api/usuarios');
const contentType = response.headers.get('content-type');
const usuarios = contentType?.includes('application/json') 
  ? await response.json() 
  : [];
---
<AdminLayout title="Gestión de Usuarios">
  <main class="min-h-screen bg-gray-50 relative overflow-x-hidden font-['Inter']">
    <!-- Contenido principal -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <!-- Tarjeta contenedora con efecto vidrio sutil -->
      <div class="bg-white rounded-xl shadow-md p-6 sm:p-8 space-y-8 border border-gray-100 transition-all duration-500 hover:shadow-lg">
        
        <!-- Fila superior: Botón y buscador -->
        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 sm:gap-6">
          <!-- Botón para abrir el modal -->
          <button
            onclick="document.getElementById('modal').classList.remove('hidden')"
            class="btn-primary group relative overflow-hidden transition-transform duration-300 hover:-translate-y-1"
          >
            <span class="relative z-10 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <span>Registrar Usuario</span>
            </span>
          </button>

          <!-- Buscador elegante -->
          <div class="relative w-full lg:w-96">
            <input
              type="text"
              placeholder="Buscar usuario..."
              class="search-input relative w-full px-5 py-3 rounded-lg bg-white border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-300 text-gray-700 placeholder-gray-400"
            />
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute right-3 top-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>

        <!-- Título de sección con borde decorativo -->
        <div class="text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-3">Registro de Usuarios</h2>
          <div class="w-24 h-1 bg-indigo-600 mx-auto rounded-full mb-6"></div>
        </div>

        <!-- Tabla de Usuarios -->
        {usuarios.length > 0 ? (
          <div class="overflow-x-auto rounded-lg shadow-sm border border-gray-200">
            <table class="min-w-full text-sm border-separate border-spacing-0">
              <thead class="table-header">
                <tr>
                  <th class="px-6 py-4 text-left font-semibold text-white rounded-tl-lg">Matrícula</th>
                  <th class="px-6 py-4 text-left font-semibold text-white">Nombre</th>
                  <th class="px-6 py-4 text-left font-semibold text-white">Correo</th>
                  <th class="px-6 py-4 text-left font-semibold text-white"></th>
                  <th class="px-6 py-4 text-left font-semibold text-white">Carrera</th>

                  <th class="px-6 py-4 text-center font-semibold text-white rounded-tr-lg">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {usuarios.map((u: { matricula: unknown; nombre: unknown; correo: unknown; rol: unknown; id: any; id_carrera: unknown; }) => (
                  <tr class="table-row group">
                    <td class="px-6 py-4 font-medium text-indigo-600">{u.matricula}</td>
                    <td class="px-6 py-4 text-gray-800 font-medium">{u.nombre}</td>
                    <td class="px-6 py-4 text-gray-600">{u.correo}</td>
                    <td class="px-6 py-4">
                 .  <!----<span class="role-badge">
                        {u.rol}
                      </span>---->   
<td class="px-6 py-4 text-gray-600">{u.carrera ?? 'Sin asignar'}</td>

                    </td>
                    <td class="px-6 py-4 text-center space-x-2">
                      <a
                        href={`/usuarios/editar?id=${u.id}`}
                        class="btn-action btn-edit"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Editar
                      </a>
                      <a
                        href={`/api/borrar_usu?id=${u.id}`}
                        onclick="return confirm('¿Seguro que quieres eliminar este usuario?')"
                        class="btn-action btn-delete"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Eliminar
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="no-users-container">
            <div class="text-gray-300 mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3">No hay usuarios registrados</h3>
            <p class="text-gray-600 max-w-md mx-auto">¡Comienza registrando el primer usuario del sistema!</p>
          </div>
        )}
      </div>
    </div>

    <!-- Modal -->
    <div
      id="modal"
      class="fixed inset-0 z-50 hidden flex items-center justify-center p-4"
    >
      <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="document.getElementById('modal').classList.add('hidden')"></div>
      
      <div class="relative bg-white rounded-xl shadow-xl w-full max-w-2xl mx-4 overflow-hidden transition-all duration-300 transform hover:scale-[1.005]">
        <!-- Botón cerrar -->
        <button
          class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-light w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-100 transition-colors"
          onclick="document.getElementById('modal').classList.add('hidden')"
          title="Cerrar"
        >
          ×
        </button>

        <!-- Encabezado -->
        <div class="p-8 pb-0 text-center">
          <div class="text-indigo-500 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-800 mb-3">Nuevo Usuario</h2>
          <div class="w-20 h-1 bg-indigo-600 mx-auto rounded-full mb-3"></div>
          <p class="text-gray-600">Registro en el Sistema Bibliotecario</p>
        </div>

        <!-- Formulario -->
<form method="POST" action="/api/agregar_usu" class="p-8 pt-6 space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Nombre Completo</label>
      <input name="nombre" required placeholder="Ingresa el nombre completo"
        class="input-field" />
    </div>

    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Correo Electrónico</label>
      <input name="correo" type="email" required placeholder="usuario@universidad.edu"
        class="input-field" />
    </div>

    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Rol del Usuario</label>
      <select name="rol" required class="select-field">
        <option value="" disabled selected>Selecciona un rol</option>
        <option value="Estudiante">Estudiante</option>
        <option value="Profesor">Profesor</option>
        <option value="Administrador">Administrador</option>
      </select>
    </div>

    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Carrera</label>
      <select name="carrera_id" required class="select-field">
        <option value="" disabled selected>Selecciona una carrera</option>
        <!-- Agrega tus opciones aquí, ejemplo: -->
        <option value="1">Ingeniería en materiales</option>
        <option value="2">Ingeniería Química</option>
        <option value="3">Ingeniería en logística</option>
        <option value="4">Ingeniería en electromecánica</option>
        <option value="5">Ingeniería en empresarial</option>



      </select>
    </div>

    <div class="md:col-span-2">
      <label class="block text-sm font-semibold text-gray-700 mb-2">Matrícula</label>
      <input name="matricula" required placeholder="A01234567"
        class="input-field" />
    </div>
  </div>

  <div class="pt-4">
    <button type="submit"
      class="btn-primary w-full group transition-transform duration-300 hover:-translate-y-1">
      <span class="relative z-10 flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Registrar Usuario</span>
      </span>
    </button>
  </div>
</form>

      </div>
    </div>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
      
      /* Componentes */
      .btn-primary {
        @apply inline-flex items-center gap-2 text-white px-6 py-3 rounded-lg font-medium transition-all duration-300;
        background-color: #4f46e5;
      }
      
      .btn-primary:hover {
        background-color: #4338ca;
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
      }
      
      .btn-action {
        @apply inline-flex items-center gap-1.5 text-xs font-medium px-3 py-1.5 rounded-md transition-all duration-200;
      }
      
      .btn-edit {
        @apply bg-indigo-100 text-indigo-700 hover:bg-indigo-200;
      }
      
      .btn-delete {
        @apply bg-red-100 text-red-700 hover:bg-red-200;
      }
      
      .btn-action:hover {
        transform: translateY(-1px);
      }
      
      .search-input {
        @apply transition-all duration-300;
      }
      
      .search-input:focus {
        @apply ring-2 ring-indigo-200 border-indigo-500;
      }
      
      .table-header {
        @apply bg-indigo-600 text-white;
      }
      
      .table-row {
        @apply bg-white hover:bg-gray-50 transition-colors duration-200;
      }
      
      .table-row:nth-child(even) {
        @apply bg-gray-50;
      }
      
      .table-row:hover {
        @apply bg-gray-100;
      }
      
      .input-field {
        @apply w-full px-4 py-2.5 rounded-lg focus:outline-none transition-all duration-300 bg-white border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100;
      }
      
      .select-field {
        @apply w-full px-4 py-2.5 rounded-lg focus:outline-none transition-all duration-300 bg-white border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100;
      }
      
      .role-badge {
        @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800;
      }
      
      .no-users-container {
        @apply text-center py-16 rounded-lg bg-gray-50 border-2 border-dashed border-gray-200;
      }
    </style>

    <script>
      // Animaciones con GSAP para una experiencia más dinámica
      document.addEventListener('DOMContentLoaded', () => {
        // Animación de entrada para la tarjeta principal
        gsap.from('.bg-white', {
          duration: 0.8,
          y: 20,
          opacity: 0,
          ease: "power2.out"
        });
        
        // Animación para los elementos de la tabla
        if (document.querySelector('.table-row')) {
          gsap.from('.table-row', {
            duration: 0.6,
            y: 10,
            opacity: 0,
            stagger: 0.05,
            delay: 0.3,
            ease: "power2.out"
          });
        }
        
        // Efecto hover más elaborado para botones
        document.querySelectorAll('button, a[href]').forEach(btn => {
          btn.addEventListener('mouseenter', () => {
            gsap.to(btn, {
              duration: 0.2,
              scale: 1.02,
              ease: "power2.out"
            });
          });
          
          btn.addEventListener('mouseleave', () => {
            gsap.to(btn, {
              duration: 0.2,
              scale: 1,
              ease: "power2.out"
            });
          });
        });
        
      });
    </script>
  </main>
</AdminLayout>
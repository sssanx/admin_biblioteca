    <script is:inline>
      // Funci√≥n para contar filtros activos
      function countActiveFilters() {
        let count = 0;
        if (document.getElementById('searchInput').value.trim() !== '') count++;
        if (document.getElementById('filterCarrera').value !== '') count++;
        if (document.getElementById('filterCuatrimestre').value !== '') count++;
        document.getElementById('activeFilters').textContent = count;
      }
      
      // Funci√≥n para filtrar la tabla - VERSI√ìN CORREGIDA
      function filterTable() {
        const searchValue = document.getElementById('searchInput').value.toLowerCase();
        const carreraValue = document.getElementById('filterCarrera').value;
        const cuatrimestreValue = document.getElementById('filterCuatrimestre').value;
        
        const rows = document.querySelectorAll('.user-row');
        let visibleCount = 0;
        
        rows.forEach(row => {
          // Filtro de b√∫squeda en celdas con clase 'searchable'
          const matchesSearch = searchValue === '' || 
            Array.from(row.querySelectorAll('.searchable')).some(cell => 
              cell.textContent.toLowerCase().includes(searchValue)
            );
          
          // Filtro por carrera (usando data attribute)
          const rowCarrera = row.getAttribute('data-carrera');
          const matchesCarrera = carreraValue === '' || 
            (rowCarrera && rowCarrera.toString() === carreraValue.toString());
          
          // Filtro por cuatrimestre (usando data attribute)
          const rowCuatrimestre = row.getAttribute('data-cuatrimestre');
          const matchesCuatrimestre = cuatrimestreValue === '' || 
            (rowCuatrimestre && rowCuatrimestre.toString() === cuatrimestreValue.toString());
          
          if (matchesSearch && matchesCarrera && matchesCuatrimestre) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        });
        
        // Actualizar contador
        document.getElementById('totalUsers').textContent = visibleCount;
        countActiveFilters();
      }
      
      // Event listeners para los filtros
      document.getElementById('searchInput').addEventListener('input', filterTable);
      document.getElementById('filterCarrera').addEventListener('change', filterTable);
      document.getElementById('filterCuatrimestre').addEventListener('change', filterTable);
      
      // Funciones para el modal
      function showModal() {
        document.getElementById('modal').classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
      }
      
      function closeModal() {
        document.getElementById('modal').classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
      }
      
      // Event listeners para el modal
      document.getElementById('showModalBtn')?.addEventListener('click', showModal);
      document.getElementById('showModalBtnEmpty')?.addEventListener('click', showModal);
      document.getElementById('closeModalBtn')?.addEventListener('click', closeModal);
      document.querySelector('.fixed.inset-0.transition-opacity')?.addEventListener('click', closeModal);
      
      // Cerrar modal con Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !document.getElementById('modal').classList.contains('hidden')) {
          closeModal();
        }
      });

      // Manejar la vigencia indefinida
      document.getElementById('vigInd').addEventListener('change', function() {
        const vigenciaInput = document.getElementById('vigencia');
        if (this.checked) {
          vigenciaInput.disabled = true;
          vigenciaInput.value = '';
        } else {
          vigenciaInput.disabled = false;
        }
      });

      // Inicializar el estado del checkbox de vigencia indefinida
      document.addEventListener('DOMContentLoaded', function() {
        const vigenciaCheckbox = document.getElementById('vigInd');
        const vigenciaInput = document.getElementById('vigencia');
        
        if (vigenciaCheckbox.checked) {
          vigenciaInput.disabled = true;
        }
        
        vigenciaCheckbox.addEventListener('change', function() {
          vigenciaInput.disabled = this.checked;
          if (this.checked) {
            vigenciaInput.value = '';
          }
        });
        
        // Ejecutar filtrado inicial
        filterTable();
        countActiveFilters();
      });
      
      // Funci√≥n para exportar a Excel
      document.getElementById('exportExcel').addEventListener('click', function() {
        // Cargar la librer√≠a SheetJS (xlsx)
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js';
        script.onload = function() {
          // Filtrar solo las filas visibles
          const visibleUsers = [];
          document.querySelectorAll('.user-row').forEach(row => {
            if (row.style.display !== 'none') {
              const cells = row.querySelectorAll('td');
              visibleUsers.push({
                'Matr√≠cula': cells[0].textContent.trim(),
                'Nombre': cells[1].textContent.trim(),
                'Correo': cells[2].textContent.trim(),
                'Carrera': cells[3].textContent.trim(),
                'Semestre': cells[4].textContent.trim(),
                'Rol': cells[5].textContent.trim(),
                'Estado': cells[6].textContent.trim()
              });
            }
          });
          
          if (visibleUsers.length > 0) {
            // Crear libro de Excel
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.json_to_sheet(visibleUsers);
            
            // Ajustar el ancho de las columnas
            const wscols = [
              {wch: 10}, // Matr√≠cula
              {wch: 25}, // Nombre
              {wch: 25}, // Correo
              {wch: 25}, // Carrera
              {wch: 12}, // Semestre
              {wch: 15}, // Rol
              {wch: 12}  // Estado
            ];
            ws['!cols'] = wscols;
            
            // A√±adir hoja al libro
            XLSX.utils.book_append_sheet(wb, ws, "Usuarios");
            
            // Generar archivo y descargar
            const fecha = new Date();
            const fechaStr = fecha.toISOString().split('T')[0];
            XLSX.writeFile(wb, `Usuarios_${fechaStr}.xlsx`);
          } else {
            alert('No hay usuarios visibles para exportar. Ajusta los filtros e intenta nuevamente.');
          }
        };
        script.onerror = function() {
          alert('Error al cargar la librer√≠a para exportar. Intenta recargar la p√°gina.');
        };
        document.head.appendChild(script);
      });
    </script>
